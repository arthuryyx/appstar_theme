
<!-- shop-category-area-start -->
<div class="shop-category-area">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2>{{ section.settings.section_title }}</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="shop-category-single">
        {% for block in section.blocks %} 
        <div class="col-lg-{{ block.settings.shop_category_coloum }} col-md-3 col-sm-6 col-xs-12">
          <div class="single-shop mb-30">
            <div class="shop-img">
              <a href="{{ block.settings.category_img_url }}"><img src="{% if block.settings.category_img %}{{ block.settings.category_img | img_url: 'large' }}{% else %}http:\/\/via.placeholder.com\/270x270{% endif %}" alt="shop" /></a>
            </div>
            <div class="shop-text">
              <h3>{{ block.settings.category_title }}</h3>

              <ul>
                {% assign category_menu_handle = block.settings.category_menu %}
                {% for link in linklists[category_menu_handle].links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<!-- shop-category-area-end -->


<style>
 
  .shop-category-area{
    margin-top:{{ section.settings.section_margin_top }}px;
  }
   .shop-category-area{
    margin-bottom:{{ section.settings.section_margin_bottom }}px;
  }
  
  
</style> 












{% schema %}
{
  "name": "Shop Category",
  "settings": [
     {
      	"type": "header",
      	"content": "Section Margin"
     },
     {
      	"type": "text",
      	"id": "section_margin_top",
      	"label": "Section Margin Top",
      	"default": "0" ,
      	"info": "Defined in pixels. Do not add the 'px' unit."
     },
     {
      	"type": "text",
      	"id": "section_margin_bottom",
      	"label": "Section Margin Bottom",
      	"default": "0" ,
      	"info": "Defined in pixels. Do not add the 'px' unit."
     },
	 {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Shop by Category"
      }
  ],
  "blocks":[
      {
         "type": "Category",
         "name": "Category",
         "settings": [
			{
				"type": "image_picker",
				"id": "category_img",
				"label": "Image",
				"info": "Recommended Size: 270 x 270px"
		    },
			{
                "type": "url",
                "id": "category_img_url",
                "label": "URL"
			},
            {
                "type": "text",
                "id": "category_title",
                "label": "Single category Title",
                "default": "weaters"
            },
			{
                "type": "link_list",
                "id": "category_menu",
                "label": "Select Menu"
            },
		    {
		    	"type": "text",
				"id": "shop_category_coloum",
				"label": "Shop Coloum",
            	"default": "3",
            	"info": "Follow Bootstrap Column"
		   }
		]
	  }
    ],
  "presets":[
    {
    	"name": "Shop Category",
    	"category": "product"
    }
  ]
}
{% endschema %}

