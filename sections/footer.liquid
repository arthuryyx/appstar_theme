
<!-- footer-area-start -->
<footer> 
  {% if section.settings.footer_top_enable %}
  <!-- footer-top-start -->
  {% include 'footer-top' %}
  <!-- footer-top-end -->
  {% endif %}
  {% if section.settings.footer_mid_enable %}
  <!-- footer-mid-start -->
  {% include 'footer-mid' %}
  <!-- footer-mid-start -->
  {% endif %}
  {% if section.settings.footer_bottom_enable %}
  <!-- footer-bottom-start -->
  {% include 'footer-bottom' %}
  <!-- footer-bottom-end -->
  {% endif %}
</footer>
<!-- footer-area-end -->

<style>
 
  .footer-top{
    padding-top:{{ section.settings.section_padding_top }}px;
  }
   .footer-top{
    padding-bottom:{{ section.settings.section_padding_bottom }}px;
  }
  .footer-mid{
    padding-top:{{ section.settings.section_padding_top_2 }}px;
  }
   .footer-mid{
    padding-bottom:{{ section.settings.section_padding_bottom_2 }}px;
  }
   .footer-bottom{
    padding-top:{{ section.settings.section_padding_top_3 }}px;
  }
   .footer-bottom{
    padding-bottom:{{ section.settings.section_padding_bottom_3 }}px;
  }

  
</style> 



