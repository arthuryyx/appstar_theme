<!-- catgory-iner-2-area-start -->
<div class="catgory-iner-2-area home-4" id="catgory-iner-2-area-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        {% for block in section.blocks %}
        <div class="catgory-iner-2-total">
          
          {% if block.settings.tab_menu_enable %}
          <div class="col-lg-{{ block.settings.tab_menu_coloum }} box-2 col-md-2 col-sm-6 col-xs-12">
            
            <div class="header-title">
              <h2>{{ block.settings.section_title }}</h2>
            </div>
            {% include 'left-menu-2' %}
            
          </div>
          {% endif %}
          {% if block.settings.banner_enable %}
          <div class="col-lg-{{ block.settings.banner_coloum }} box-2 col-md-4 col-sm-6 col-xs-12">
            
            {% include 'banner-image-4' %}
            
          </div>
          {% endif %}
          
          <div class="col-lg-{{ block.settings.tab_coloum }} box-2 col-md-6 col-sm-12 col-xs-12">
            
            <!-- tab-active-start -->
            <div class="tab-active tab-active-4">
              
             {% include 'tab-product-4' %}
              
        
            </div>
            <!-- tab-active-start -->
            
            <!-- tab-active-2-start -->
            <div class="tab-active-2 tab-active-22">
              
                {% assign collection1 = collections[block.settings.collection1] %}
          		{% for product in collection1.products %}
              <div class="tab-total">
                <!-- single-product-start -->
                {% include 'product-grid-item' %}
                <!-- single-product-end -->
              </div>
              {% endfor %}


              
              
            </div>
            <!-- tab-active-2-start -->			
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<!-- catgory-iner-2-area-end -->

<style>
 
  #catgory-iner-2-area-{{ section.id }}.catgory-iner-2-area{
    margin-top:{{ section.settings.section_margin_top }}px;
  }
   #catgory-iner-2-area-{{ section.id }}.catgory-iner-2-area{
    margin-bottom:{{ section.settings.section_margin_bottom }}px;
  }
  #catgory-iner-2-area-{{ section.id }} .catgory-iner-2-total {
    background: {{ section.settings.catgory_iner_2_bg }} none repeat scroll 0 0;
    border-top: 2px solid {{ section.settings.catgory_iner_2_border }};
  }
  #catgory-iner-2-area-{{ section.id }} .catgory-iner-2-total .header-title {
    background: {{ section.settings.catgory_iner_2_title_bg }} none repeat scroll 0 0;
  }
</style> 


<script>
  
  /*----------------------------
 tab-active
------------------------------ */  
  $("#catgory-iner-2-area-{{ section.id }} .tab-active-4 ").owlCarousel({
      autoPlay: false, 
	  slideSpeed:2000,
	  pagination:false,
	  navigation:true,	  
      items : {{ section.settings.tab_product_coloum }},
	  /* transitionStyle : "fade", */    /* [This code for animation ] */
	  navigationText:["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
      itemsDesktop : [1199,{{ section.settings.tab_product_coloum }}],
	  itemsDesktopSmall : [992,{{ section.settings.tab_product_coloum }}],
	  itemsTablet: [768,1],
	  itemsMobile : [479,1],
  });
        
  
  
  /*----------------------------
