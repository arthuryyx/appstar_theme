------------------------------ */  
  $("#catgory-iner-2-area-{{ section.id }} .tab-active-22").owlCarousel({
      autoPlay: false, 
	  slideSpeed:2000,
	  pagination:false,
	  navigation:true,	  
      items : {{ section.settings.tab_product_2_coloum }},
	  /* transitionStyle : "fade", */    /* [This code for animation ] */
	  navigationText:["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
      itemsDesktop : [1199,{{ section.settings.tab_product_2_coloum }}],
	  itemsDesktopSmall : [992,{{ section.settings.tab_product_2_coloum }}],
	  itemsTablet: [768,2],
	  itemsMobile : [479,1],
  });
  	
  
</script>




