
<!-- onsaleproduct-area-start -->
<div class="onsaleproduct-area" id="onlsale-{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
		{% if section.settings.collection_title != ''  %}
        <div class="section-title {% if section.settings.section_border_enable %}section-tittle-border{% endif %}">
          <h2>{{ section.settings.collection_title }}</h2>
        </div>
        {% endif %}
		{% if section.settings.coundown_enable %}
        <div class="timer">
          <div data-countdown="{{ section.settings.coundown }}"></div>
        </div>
		{% endif %}
        <div class="saleproduct-active saleproduct-new">
          {% assign collection = collections[section.settings.collection] %}
          {% for product in collection.products %}
          <!-- single-product-start -->
          {% include 'product-grid-item' %}
          <!-- single-product-end -->
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
<!-- onsaleproduct-area-end -->


<style>
 
 #onlsale-{{ section.id }}.onsaleproduct-area{
    padding-top:{{ section.settings.section_padding_top }}px;
  }
  
  #onlsale-{{ section.id }}.onsaleproduct-area{
    padding-bottom:{{ section.settings.section_padding_bottom }}px;
  }
  
  
</style> 



<script>
  
  $("#onlsale-{{ section.id }} .saleproduct-new").owlCarousel({
      autoPlay: true, 
	  slideSpeed:2000,
	  pagination:false,
	  navigation:true,	  
      items : {{ section.settings.product_coloum }},
	  /* transitionStyle : "fade", */    /* [This code for animation ] */
	  navigationText:["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
    itemsDesktop : [1199,{{ section.settings.product_coloum }}],
	  itemsDesktopSmall : [992,{{ section.settings.product_coloum }}],
	  itemsTablet: [768,2],
	  itemsMobile : [479,1],
  });
        
  
</script>


{% schema %}
  {
    "name": "OnSale Product",
    "settings": [
		{
            "type": "header",
            "content": "Section Padding"
        },
        {
            "type": "text",
            "id": "section_padding_top",
            "label": "Section Padding Top",
            "default": "0" ,
            "info": "Defined in pixels. Do not add the 'px' unit."
        },
        {
            "type": "text",
            "id": "section_padding_bottom",
            "label": "Section Padding Bottom",
            "default": "0" ,
            "info": "Defined in pixels. Do not add the 'px' unit."
        },
		{
            "type": "header",
            "content": "Section Title"
        },
		{
           "type": "text",
           "id": "collection_title",
           "label": "Section Title",
		   "default": "hot deals"
		},
		{
           "type": "header",
           "content": "Section Header Border"
        },
        {
           "type": "checkbox",
           "id": "section_border_enable",
           "label": "Show Border",
           "default": false
        },
		{
           "type": "collection",
           "id": "collection",
           "label": "select your collection"
		},
        {
          "type": "select",
          "id": "product_coloum",
          "label": "Product Limit",
          "options":[
            {
            	"value":"3",
           	 	"label": "3 products"
            },
            {
            	"value":"4",
            	"label": "4 products"
            },
            {
            	"value":"5",
            	"label": "5 products"
            },
            {
            	"value":"6",
            	"label": "6 products"
            }

          ],

         "default": "5"
        },
		{
			"type": "header",
			"content": "Coundown"
		},
		{
            "type": "checkbox",
        	"id": "coundown_enable",
        	"label": "Show Coundown",
        	"default": true
      	},
		{
			"type": "text",
			"id": "coundown",
			"label": "Coundown",
			"default": "2019/12/16",
			"info": "yyyy/mm/dd"
		}
	],
	"presets":[
		{
			"name": "OnSale Product",
			"category": "product"
		}
	]
  }
{% endschema %}

