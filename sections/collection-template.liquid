
<!-- shop-main-area-start -->
<div class="shop-main-area">
  <div class="container">
    <div class="row">
      <div class="{% if section.settings.collection_sidebar_position == 'no_sidebar' %}col-lg-12 col-md-12{% else %}col-lg-9 col-md-9{% endif %} col-sm-12 col-xs-12 pull-right">
        {% assign pagination_limit = section.settings.product_limit_count %}
        {% paginate collection.products by pagination_limit %}
         {% if settings.shop_page_title != '' %}
        <div class="left-title-2">
          <h3>{{ section.settings.shop_page_title }}</h3>
        </div>
        {% endif %}
        {% include 'collection-sorting' %}
        <!-- tab-area-start -->
        <div class="tab-content shop">

          <div id="gf-products" class="products-grid mb-50">
			{% for product in collection.products %}
            {% include 'product-grid-item' %}
			{% endfor %}
		

          </div>
        </div>

        <div class="pagenation-area">
          <div class="page-number ">
            {% include 'pagination' %}
          </div>
        </div>
        {% endpaginate %}
      </div>
      {% unless section.settings.collection_sidebar_position == 'no_sidebar' %}
      <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        {% include 'collection-sidebar' %}
      </div>
      {% endunless %}
    </div>
  </div>
</div>
<!-- shop-main-area-end -->


<style>
 
  .shop-main-area{
    margin-top:{{ section.settings.section_margin_top }}px;
  }
   .shop-main-area{
    margin-bottom:{{ section.settings.section_margin_bottom }}px;
  }
  
  
</style>








