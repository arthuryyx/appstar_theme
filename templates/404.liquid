<!-- section-element-area-start -->
<div class="section-element-area ptb-80 page">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="entry-header text-center mb-20">
          {% if settings.opps_404 %}
          <img src="{% if settings.opps_404 %}{{ settings.opps_404 | img_url: 'large' }}{% else %}http:\/\/via.placeholder.com\/390x270{% endif %}" alt="not-found-img" />
          {% endif %}
          <p>{{ settings.heading_404 }}</p>
        </div>
        <div class="entry-content text-center mb-30">
          <p>{{ settings.sub_text_404 }}</p>
          <a href="/">{{ settings.button_title }}</a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- section-element-area-end -->
