




  <div class="slider-active">
    {% for block in section.blocks %}
    <div class="single-slider">
      <div class="slider-img">
        <a href="{{ block.settings.slider-img_url }}"><img src="{% if block.settings.slider-img %}{{ block.settings.slider-img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/900x490{% endif %}" alt="slider" /></a>
      </div>
      <div class="slider-text text-{% if block.settings.slider_position == 'slider_right' %}right{% elsif block.settings.slider_position == 'slider_left' %}left{% elsif block.settings.slider_position == 'slider_center' %}center{% endif %}">
        <h1>{{ block.settings.slider_title }}</h1>
        <h2>{{ block.settings.slider_subtitle }}</h2>
        <h3>{{ block.settings.sider_product_name }}</h3>
        <a style="display:none;" href="{{ block.settings.slider_button_url }}">{{ block.settings.slider_button }}</a>
      </div>
    </div>
    {% endfor %}
    
  </div>



<style>
  {% for block in section.blocks %}
 {% if block.settings.slider_position == 'slider_right' %} 
.single-slider .slider-text.text-right {
    right: 10%;
    width: 100%;
    left: auto;
}
  {% endif %}
  {% endfor %}
  
</style>