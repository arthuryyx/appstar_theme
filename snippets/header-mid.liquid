

<div class="header-min-area">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
        <!-- logo-area-start -->
        <div class="logo-area">
          {% if section.settings.logo %}
          <a href="/"><img src="{% if section.settings.logo %}{{ section.settings.logo | img_url: 'compact' }}{% else %}http:\/\/via.placeholder.com\/194x58{% endif %}" alt="{{ shop.name }}" /></a>
          {% else %}
          <a href="/">{{ shop.name }}</a>
          {% endif %}
        </div>
        <!-- logo-area-end -->
      </div>
      <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">   
        {% include 'search-bar' %}
        {% include 'mini-cart' %}
      </div>
    </div>
  </div>
</div>

